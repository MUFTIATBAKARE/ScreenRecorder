{
  "manifest_version": 3,
  "name": "HelpMeOut",
  "version": "1.0",
  "description": "Record and share your screen",
  "permissions": ["tabs", "activeTab", "desktopCapture", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/ext_icon.png",
      "48": "images/ext_icon.png",
      "128": "images/ext_icon.png"
    }
  },
  "icons": {
    "16": "images/ext_icon.png",
    "48": "images/ext_icon.png",
    "128": "images/ext_icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
